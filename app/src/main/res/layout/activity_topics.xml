<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="70dp"
    android:paddingRight="70dp"
    android:paddingTop="70dp"
    android:paddingBottom="70dp"
    tools:context=".TopicsActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="30dp"
        android:text="Choose a Topic"
        android:textColor="#503481"
        android:textSize="30dp" />

    <Button
        android:id="@+id/topic1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:background="#A539F3"
        android:onClick="question"
        android:text="JAVA"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <Button
        android:id="@+id/topic2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topic1"
        android:layout_marginBottom="70dp"
        android:background="#A539F3"
        android:text="HISTORY"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="40dp"
        android:onClick="question1"/>

    <Button
        android:id="@+id/topic3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topic2"
        android:background="#A539F3"
        android:text="GENERAL KNOWLEDGE"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="35dp"
        android:onClick="question2"/>

</RelativeLayout>